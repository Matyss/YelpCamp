<% include ../partials/header %>

<div class='row'>
    <h1 style='text-align:center'>Create a New Campground</h1>
    <div class='new-campground'>
        <form action='/campgrounds' method='POST'>
            <div class='form-group'>
                <label for'name'>Name</label>
                <input class='form-control' type='text' name='name' placeholder='name'>    
            </div>
            <div class='form-group'>
                <label for'price'>Price</label>
                <input class='form-control' type='number' name='price' placeholder='price' min='1' step='0.05'>    
            </div>
            <label for'location'>Location</label>
            <div class='form-group'>
                <input class='form-control' type='text' name='location' id='location' placeholder='eg. Yosemite National Park, CA'>
            </div>
            <label for='image'>Image Url</label>
            <div class='form-group'>
                <input class='form-control' type='text' name='image' placeholder='image url'>
            </div>
            <label for='description'>Description</label>
            <div class='form-group'>
                <textarea class='form-control' name='description' placeholder='description'></textarea>
            </div>
            <div class='form-group'>
                <button class='btn btn-lg btn-primary btn-block '>Submit!</button>
            </div>
        </form>
        <a href='/campgrounds'>Go Back</a>
    </div>
</div>

<% include ../partials/footer %>
